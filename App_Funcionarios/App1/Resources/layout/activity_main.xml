<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_marginBottom="0.0dp">
        <Button
            android:text="Pesquisar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPESQUISAR"
            android:layout_marginTop="5.5dp" />
        <TextView
            android:text="Qual o nome do Funcionário?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginTop="21.0dp" />
        <EditText
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNOMEFUNCIONARIO" />
        <TextView
            android:text="Qual o Sexo dos Funcionários?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="18.0dp"
            android:layout_gravity="clip_horizontal" />
        <RadioGroup
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup1"
            android:fadingEdge="vertical"
            android:orientation="horizontal">
            <RadioButton
                android:text="MASCULINO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonMASCULINO" />
            <RadioButton
                android:text="FEMININO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/radioButtonFEMININO" />
        </RadioGroup>
        <TextView
            android:text="Qual a Idade:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewIDADE"
            android:layout_marginTop="18.0dp" />
        <EditText
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextIDADE" />
        <TextView
            android:text="Cargo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCARGO" />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputEditTextCARGO"
            android:layout_marginBottom="0.0dp"
            android:layout_marginTop="0.0dp" />
        <Button
            android:text="Cadastrar"
            android:layout_width="match_parent"
            android:layout_height="51.0dp"
            android:id="@+id/buttonCADASTRAR"
            android:layout_marginTop="4.0dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2">
            <ListView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="103.0dp"
                android:id="@+id/listViewRECEITAS"
                android:requiresFadingEdge="horizontal"
                android:fadingEdge="horizontal"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>